  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Test",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "runtimeExecutable": "meteor",
      "runtimeArgs": [
        "test-packages",
        "./",
        "--driver-package=meteortesting:mocha",
        "--raw-logs"
      ],
      "sourceMapPathOverrides": {
        "meteor://ðŸ’»app/packages/majus:testing/*": "${workspaceFolder}/*",
      },
      "env": {
        "TEST_WATCH": "1"
      },
      "outputCapture": "std",
      "restart": true,
      "timeout": 30000
    }
  ]
}